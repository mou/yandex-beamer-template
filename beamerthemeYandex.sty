\def\authorposition{\@dblarg\beamer@yandex@authorposition}
\long\def\beamer@yandex@authorposition[#1]#2{%
  \def\beamer@temp{#2}%
  \ifx\beamer@temp\@empty
    \def\insertauthorposition{}
  \else
    \def\insertauthorposition{\def\inst{\beamer@yandex@authorposauthorpos}\def\and{\beamer@yandex@andauthorpos}#2}%
  \fi
}
\authorposition{}

\def\beamer@yandex@authorposauthorpos#1{{\donotcoloroutermaths$^{#1}$}\ignorespaces}
\def\beamer@yandex@andauthorpos{\\[1em]}

